<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox id="fixBox" alignment="CENTER">
         <children>
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <ImageView id="avatarView" fx:id="avatarView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                  <Circle fx:id="playerAvatarCircle" fill="DODGERBLUE" radius="60.0" stroke="BLACK" strokeType="INSIDE" styleClass="avatarCircle" />
               </children>
            </StackPane>
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="playerLabel" text="Player 1">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="winLabel" text="Has won with a score of:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="scoreLabel" text="Label">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button fx:id="returnButton" minWidth="100.0" mnemonicParsing="false" onAction="#returnToMain" styleClass="tertiaryMenuButton" text="Return" VBox.vgrow="NEVER" />
   </children>
</fx:root>
